	<div type="&#x005B;Tekst&#x005D;">
     <pb type="periText" facs="1838_605_2_fax001.jpg"/>     
	<pb type="periText" facs="1838_605_2_fax002.jpg"/>
     	<pb type="periText" facs="1838_605_2_fax003.jpg"/>     
	<pb type="periText" facs="1838_605_2_fax004.jpg"/>
