	<titlePart type="main">Til Paasken.</titlePart>
				<fw type="graphic"/>
	<titlePart type="sub">Mel. Fryd dig du Christi Brud.</titlePart>
</docTitle>
<byline></byline>
				<epigraph>
				</epigraph>
				<fw type="graphic"/>
				<docEdition></docEdition>
